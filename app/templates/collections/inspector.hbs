<div id="iModal">
  <i class="fa fa-info"></i>
  <i class="fa fa-times" {{action 'cancel'}}></i>
  <h2>
    {{model.collection.name}}#
    {{#if model.internal}}
      <span>{{model.name}}</span>
    {{else}}
      {{focus-input type='text' value=model.name}}
    {{/if}}
  </h2>
  <div class="options">
    <ul id="listOne">
      <li>
        {{radio-button value='text' groupValue=model.type
          id='type-text' name='type' disabled=model.internal}}
        <label for="type-text">
          <i class="fa fa-font"></i> Text
        </label>
      </li>
      <li>
        {{radio-button value='number' groupValue=model.type
          id='type-number' name='type' disabled=model.internal}}
        <label for="type-number">
          <i class="fa fa-calculator"></i> Number
        </label>
      </li>
      <li>
        {{radio-button value='datetime' groupValue=model.type
          id='type-datetime' name='type' disabled=model.internal}}
        <label for="type-datetime">
          <i class="fa fa-calendar"></i> Date Time
        </label>
      </li>
      <li>
        {{radio-button value='file' groupValue=model.type
          id='type-file' name='type' disabled=model.internal}}
        <label for="type-file">
          <i class="fa fa-file"></i> File
        </label>
      </li>
    </ul>
    <ul id="listTwo">
      <li>
        <label>
          {{list-checkbox value='presence'
            checked=model.validations
            name='validations' disabled=model.internal}}
          Presence
        </label>
      </li>
      <li>
        <label>
          {{list-checkbox value='uniqueness'
            checked=model.validations
            name='validations' disabled=model.internal}}
          Uniqueness
        </label>
      </li>
      <li>
        <label>
          {{list-checkbox value='size'
            checked=model.validations
            name='validations' disabled=model.internal}}
          Size
        </label>
      </li>
      <li>
        <label>
          {{list-checkbox value='format'
            checked=model.validations
            name='validations' disabled=model.internal}}
          Format
        </label>
      </li>
    </ul>
    <div class="actions">
      {{#if model.internal}}
        <a class="btn cancel" href="#" {{action 'cancel'}}>Close</a>
      {{else}}
        {{#unless model.isNew}}
          <a class="btn delete" href="#" {{action 'deleteField'}}>Delete</a>
        {{/unless}}
        <a class="btn save" href="#" {{action 'saveField'}}>Save</a>
        <a class="btn cancel" href="#" {{action 'cancel'}}>Cancel</a>
      {{/if}}
    </div>
  </div>
</div>
