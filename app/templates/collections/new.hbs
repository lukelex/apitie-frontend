<div id="iModal" class="minimal">
  <i class="fa fa-times" {{action 'cancel'}}></i>

  <h2>New Collection</h2>

  <form {{action 'save' on='submit'}}>
    {{focus-input value=name placeholder='Collection name'}}
    <button type="submit"></button>
  </form>

  <div class="actions">
    <a class="btn save" href="#" {{action 'save'}}>Save</a>
    <a class="btn cancel" href="#" {{action 'cancel'}}>Cancel</a>
  </div>
</div>
