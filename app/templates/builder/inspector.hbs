<div id="iModal">
  <i class="fa fa-info"></i>
  <i class="fa fa-times" {{action 'closeModal'}}></i>
  <h2>
    {{entity.name}}#<span>{{field}}</span>
  </h2>
  <div class="options">
    <ul id="listOne">
      <li>
        <input checked="checked" id="text" name="type" type="radio" />
        <label for="text">
          <i class="fa fa-font"></i> Text
        </label>
      </li>
      <li>
        <input id="number" name="type" type="radio" />
        <label for="number">
          <i class="fa fa-database"></i> Number
        </label>
      </li>
      <li>
        <input id="datetime" name="type" type="radio" />
        <label for="datetime">
          <i class="fa fa-font"></i> Date Time
        </label>
      </li>
      <li>
        <input id="file" name="type" type="radio" />
        <label for="file">
          <i class="fa fa-font"></i> File
        </label>
      </li>
    </ul>
    <ul id="listTwo">
      <li>
        <input id="presence" type="checkbox" checked="checked" />
        <label for="presence">Presence</label>
      </li>
      <li>
        <input id="size" type="checkbox" />
        <label for="size">Size</label>
      </li>
      <li>
        <input id="uniqueness" type="checkbox" />
        <label for="uniqueness">Uniqueness</label>
      </li>
      <li>
        <input id="format" type="checkbox" />
        <label for="format">Format</label>
      </li>
    </ul>
    <div class="actions">
      <a class="btn delete" href="#" {{action 'deleteField'}}>Delete</a>
      <a class="btn save" href="#" {{action 'saveField'}}>Save</a>
      <a class="btn cancel" href="#" {{action 'closeModal'}}>Cancel</a>
    </div>
  </div>
</div>
